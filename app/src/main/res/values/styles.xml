<resources>
    <!-- custom styles-->
    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/window_background</item>
    </style>

    <style name="ActionBarThemeOverlayNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/window_background</item>
    </style>

    <style name="PinActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="DrawerBlackArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">@dimen/header_bar_elevation</item>
    </style>

    <style name="ErrorStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/app_body_text_dark</item>
        <item name="android:textSize">@dimen/app_text_size_large</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SmallTitleText">
        <item name="android:textColor">@color/app_body_text_dark</item>
        <item name="android:textSize">@dimen/app_text_size_xmedium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textColor">@color/app_body_text_light</item>
        <item name="android:textSize">@dimen/app_text_size_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SizeSpecificCollapsingToolbarLayout">
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">?android:attr/colorPrimary</item>
    </style>

</resources>